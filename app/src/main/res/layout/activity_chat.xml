<?xml version="1.0" encoding="utf-8"?>
<FrameLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ListView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lv_chats"
            />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_floating_chat"
            app:backgroundTint="@color/colorPurpleLight_2"
            app:rippleColor="@android:color/background_light"
            android:id="@+id/fl_add_chat"
            />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="60dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_add_reunion_2"
            app:backgroundTint="@color/colorPurpleLight_2"
            app:rippleColor="@android:color/background_light"
            android:id="@+id/fl_add_reunion"
            />
        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="110dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_add_tarea"
            app:backgroundTint="@color/colorPurpleLight_2"
            app:rippleColor="@android:color/background_light"
            android:id="@+id/fl_add_tarea"
            />
    </RelativeLayout>
</FrameLayout>