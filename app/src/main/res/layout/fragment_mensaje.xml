<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/boton_circular_blanco"
    android:layout_marginVertical="2dp"
    android:layout_marginHorizontal="2dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre usuario"
            android:textSize="16dp"
            android:textColor="@color/colorPurpleDark"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/tv_nombre_usuario_fragment_mensaje"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_nombre_usuario_fragment_mensaje"
            android:text="Mensaje del usuario"
            android:textColor="@color/colorGris"
            android:id="@+id/tv_mensaje_fragmento_mensajes"
            />
    </RelativeLayout>
</FrameLayout>