<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainReuniones">

    <ListView
        android:layout_marginTop="10dp"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lv_reuniones"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No hay reuniones proximas"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="28dp"
        android:id="@+id/tv_npreunion_main_reuniones"
        android:visibility="gone"
        />
    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_floating_chat"
        app:backgroundTint="@color/colorPurpleLight_2"
        app:rippleColor="@android:color/background_light"
        android:id="@+id/fl_add_reunion"
        />

</RelativeLayout>