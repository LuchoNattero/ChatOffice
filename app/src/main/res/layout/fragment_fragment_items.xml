<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragmentos.Fragment_items">

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:text="Titulo"
        android:id="@+id/tv_titulo_tarea_realizar"
        android:textSize="18dp"
        android:textColor="#000000"
        />

    <TextView
        android:text="Prioridad"
        android:id="@+id/tv_prioridad_tarea_realizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:textSize="18dp"
        />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lv_items_tarea_realizar"
        android:layout_below="@+id/tv_titulo_tarea_realizar"
        />


</RelativeLayout>